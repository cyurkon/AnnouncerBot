            "title": {
              "type": "plain_text",
              "text": "Are you sure?"
            },
            "text": {
              "type": "mrkdwn",
              "text": "This will be permanent."
            },
            "confirm": {
              "type": "plain_text",
              "text": "Yes"
            },
            "deny": {
              "type": "plain_text",
              "text": "Cancel"
            }
